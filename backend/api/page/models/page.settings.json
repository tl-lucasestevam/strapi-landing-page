{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "name": "page",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": false,
      "maxLength": 255,
      "minLength": 3
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "section.section-two-columns",
        "section.image-grid",
        "section.section-content"
      ],
      "required": true
    },
    "menu": {
      "type": "component",
      "repeatable": false,
      "component": "menu.menu",
      "required": true
    },
    "footer_text": {
      "type": "richtext",
      "required": true
    }
  }
}
